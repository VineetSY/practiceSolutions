#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
//Complete the following function.
int ai, bi, ci;
int recurse_func(int n)
{
    if (n == 1)
    {
        return ai;
    }else if(n == 2)
    {
        return bi;
    }else if(n == 3)
    {
        return ci;
    }

    return (recurse_func(n - 1) + recurse_func(n - 2) + recurse_func(n - 3));
}

int find_nth_term(int n, int a, int b, int c) {
  //Write your code here.
  ai = a;
  bi = b;
  ci = c;
  return (recurse_func(n));
}

int main() {
    int n, a, b, c;
  
    scanf("%d %d %d %d", &n, &a, &b, &c);
    int ans = find_nth_term(n, a, b, c);
 
    printf("%d", ans); 
    return 0;
}

